@model Charcoal.Models.TaskViewModel      

<div class="@Model.GetStyle()" id="StoryTask-@Model.Id">
    <h3>Task</h3>
    <p>@Model.Description</p>
    <p><strong>@Model.Assignees</strong></p>
    <div class="card-buttons">
        @*Buttons*@
        <a href="#" class="btn-mini icon-trash" title="delete story" onclick="DeleteTask('@Url.Action("DeleteTask", "Stories")',@Model.Id)"></a>
        <a href="#" class="btn-mini icon-fire" title="Toggle Status" onclick="ToggleTaskStatus('@Url.Action("ToggleTaskStatus","Stories")',@Model.Id)"></a>
    </div>
</div>