@model Charcoal.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span10">
            <div class="page-header">
                <h1>
                    Dashboard</h1>
            </div>
            <div class="row-fluid">
                <div class="span5">
                    <h1>
                        <small>Projects</small></h1>
                    @{
                        if (Model.Projects.Count == 0)
                        {
                        <div class="alert alert-error">
                           <strong>Warning!</strong>No project avaiable. You can create one through
                            @Html.ActionLink("here", "Index", "Project")
                        </div>
                        <div>
                        </div>
                        }
                    }
                    @foreach (var project in Model.Projects)
                    {
                        Html.RenderPartial("ProjectControl", project);
                    }
                </div>
                <div class="span5">
                    <h1>
                        <small>Recent activities</small></h1>
                    @foreach (var activityViewModel in Model.Activities)
                    {
                        Html.RenderPartial("ActivityControl", activityViewModel);
                    }
                </div>
            </div>
        </div>
    </div>
</div>
