@model Charcoal.Models.ProjectViewModel
<div class="well">
    <div class="row-fluid">
        <div class="span9">
            <div class="span6">
                @Model.Title
            </div>
            <div class="span3">
                @Model.Velocity
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div >
            <div >
                @Model.Description
            </div>
            <div class="btn-group">
                <div>
                    <a class="btn btn-mini" href="@Url.Action("Edit","Project",new{id=Model.Id})"><i class="icon-pencil"></i>Edit</a>
                    <a class="btn btn-mini" href="@Url.Action("Analyze","Analytics",new{id=Model.Id})"><i class="icon-fire"></i>Analyze</a>
                    <a class="btn btn-mini" href="@Url.Action("CurrentTab","Stories",new{projectid=Model.Id})"><i class="icon-tasks"></i>Stories</a>
                </div>
            </div>
        </div>
    </div>
</div>
